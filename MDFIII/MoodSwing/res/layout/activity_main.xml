<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:text="@string/what_is_your_mood_today_"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/angry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bigGrin"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/button"
        android:onClick="onClick"
        android:src="@drawable/angry" />

    <ImageButton
        android:id="@+id/bomb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignTop="@+id/angry"
        android:contentDescription="@string/button"
        android:onClick="onClick"
        android:src="@drawable/bomb" />

    <ImageButton
        android:id="@+id/brokenHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bigGrin"
        android:layout_below="@+id/bigGrin"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/button"
        android:onClick="onClick"
        android:src="@drawable/broken_heart" />

    <ImageButton
        android:id="@+id/cold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/angry"
        android:layout_alignTop="@+id/brokenHeart"
        android:contentDescription="@string/button"
        android:onClick="onClick"
        android:src="@drawable/cold" />

    <ImageButton
        android:id="@+id/confused"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bomb"
        android:layout_alignTop="@+id/cold"
        android:contentDescription="@string/button"
        android:onClick="onClick"
        android:src="@drawable/confused" />

    <ImageButton
        android:id="@+id/devil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/crying"
        android:layout_alignTop="@+id/dead"
        android:contentDescription="@string/button"
        android:onClick="onClick"
        android:src="@drawable/devil" />

    <ImageButton
        android:id="@+id/dizzy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/crying2"
        android:layout_alignTop="@+id/devil"
        android:contentDescription="@string/button"
        android:onClick="onClick"
        android:src="@drawable/dizzy" />

    <ImageButton
        android:id="@+id/drolling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dizzy"
        android:layout_alignTop="@+id/drinks"
        android:contentDescription="@string/button"
        android:src="@drawable/drooling" />

    <ImageButton
        android:id="@+id/dontTellAnyone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dead"
        android:layout_below="@+id/dead"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/button"
        android:onClick="onClick"
        android:src="@drawable/donttell_anyone" />

    <ImageButton
        android:id="@+id/drinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/devil"
        android:layout_alignTop="@+id/dontTellAnyone"
        android:contentDescription="@string/button"
        android:onClick="onClick"
        android:src="@drawable/drinks" />

    <ImageButton
        android:id="@+id/dead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cool"
        android:layout_below="@+id/cool"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/button"
        android:onClick="onClick"
        android:src="@drawable/dead" />

    <ImageButton
        android:id="@+id/bigGrin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="19dp"
        android:contentDescription="@string/button"
        android:onClick="onClick"
        android:src="@drawable/big_grin" />

    <ImageButton
        android:id="@+id/cool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/brokenHeart"
        android:layout_alignTop="@+id/crying"
        android:contentDescription="@string/button"
        android:onClick="onClick"
        android:src="@drawable/cool" />

    <ImageButton
        android:id="@+id/crying2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/confused"
        android:layout_below="@+id/confused"
        android:layout_marginTop="26dp"
        android:contentDescription="@string/button"
        android:onClick="onClick"
        android:src="@drawable/crying2" />

    <ImageButton
        android:id="@+id/crying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cold"
        android:layout_alignTop="@+id/crying2"
        android:contentDescription="@string/button"
        android:onClick="onClick"
        android:src="@drawable/crying" />

    <ImageButton
        android:id="@+id/goodbye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dontTellAnyone"
        android:layout_alignTop="@+id/heart"
        android:contentDescription="@string/button"
        android:onClick="onClick"
        android:src="@drawable/goodbye" />

    <ImageButton
        android:id="@+id/heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/drinks"
        android:layout_below="@+id/drolling"
        android:layout_marginTop="26dp"
        android:contentDescription="@string/button"
        android:onClick="onClick"
        android:src="@drawable/heart" />

    <ImageButton
        android:id="@+id/hug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/drolling"
        android:layout_alignTop="@+id/goodbye"
        android:contentDescription="@string/button"
        android:onClick="onClick"
        android:src="@drawable/hug" />

</RelativeLayout>